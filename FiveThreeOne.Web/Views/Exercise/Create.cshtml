@model FiveThreeOne.Web.Models.CreateExerciseModel

@{
    ViewBag.Title = "Log On";
}

<hgroup class="title">
    <h1>Log On.</h1>
    <h2>Enter your username and password below.</h2>
</hgroup>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Error")

@using (Html.BeginForm((string)ViewBag.FormAction, "Exercise")) {
    <fieldset>
        <legend>Log On Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </li>
            <li>
				    @Html.LabelFor(m => m.WorkoutMax)
                @Html.TextBoxFor(m => m.WorkoutMax)
                @Html.ValidationMessageFor(m => m.WorkoutMax)
            </li>
        </ol>
        <input type="submit" value="Skapa" title="Skapa" />
    </fieldset>
    
}